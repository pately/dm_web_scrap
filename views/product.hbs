<div class="container">
    <div class="row">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">

            <div class="card">
            <!--Carousel Wrapper-->
            <div id="carousel-example-1z" class="carousel slide carousel-fade z-depth-1-half" data-ride="carousel">
                <!--Indicators-->
                <ol class="carousel-indicators">


                    {{#each suggestedChamps.images}}
                    <li data-target="#carousel-example-1z" data-slide-to="{{@index}}" class="{{#if @first }}active {{/if}}"></li>
 

                    {{/each}}
                </ol>
                <!--/.Indicators-->
                <!--Slides-->
                <div class="carousel-inner" role="listbox">
                    {{#each suggestedChamps.images}}

                    <div class="carousel-item {{#if @first }}active {{/if}}">
                        <img class="d-block w-100" src="{{this}}" alt="{{@index}} slide" style="width: 100%; display: inline-block;">
                    </div>
                    {{/each}}
                </div>
                <!--/.Slides-->
                <!--Controls-->
                <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <!--/.Controls-->
            </div>
            <!--/.Carousel Wrapper-->



                <div class="card-img-overlay d-flex justify-content-end">
                    <a href="#" class="card-link text-danger like">
                        <i class="fas fa-heart"></i>
                    </a>
                </div>
                <div class="card-body">
                    <h4 class="card-title">{{suggestedChamps.brand}}</h4>
                    <h6 class="card-subtitle mb-2 text-muted">{{suggestedChamps.base}}</h6>
                    <p class="card-text">
                        {{suggestedChamps.product}}</p>
                    <div class="options d-flex flex-fill">
                        <ul class="custom-ul mr-1">

                            {{#each suggestedChamps.produktbeschreibung}}
                            <li>
                                {{this}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="buy d-flex justify-content-between align-items-center">
                        <div class="price text-success">
                            <h5 class="mt-4">{{suggestedChamps.price}}</h5>
                        </div>
                        <a href="#" class="btn btn-danger mt-3"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>